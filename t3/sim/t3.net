Circuito regulador
* NGSPICE simulation script
* BJT amp with feedback
*

* forces current values to be saved

.options savecurrents

.include ngspice_input.txt

.model Default D

.op

.end

.control

set numdgt = 12

*makes plots in color
set hcopypscolor=0
set color0=white
set color1=black
set color2=red
set color3=blue
set color4=violet
set color5=rgb:3/8/0
set color6=rgb:4/0/0


echo "********************************************"
echo  "Transient analysis"
echo "********************************************"
tran 1e-4 2e-1

meas tran ymax MAX v(out1)
meas tran ymin MIN v(out1)
meas tran mean AVG v(out1)

hardcopy trans_sim4.ps v(mid1) v(out1)
echo trans_sim4_FIG

hardcopy trans_sim5.ps v(out1)-12
echo trans_sim5_FIG

.endc

