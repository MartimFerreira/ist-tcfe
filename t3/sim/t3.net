*
* NGSPICE simulation script
* BJT amp with feedback
*

* forces current values to be saved
.options savecurrents

.include ngspice_input.txt

.op

.end

.control

set numdgt = 12

*makes plots in color
set hcopypscolor=0
set color0=white
set color1=black
set color2=red
set color3=blue
set color4=violet
set color5=rgb:3/8/0
set color6=rgb:4/0/0


echo "********************************************"
echo  "Transient analysis"
echo "********************************************"
tran 1e-4 2e-1

let average  = mean(v(out1)-v(0))

.measure tran ymax MAX v(out1)-v(0)
.measure tran ymin MIN v(out1)-v(0)

hardcopy trans_sim4.ps (v(mid1)-v(0)) (v(out1)-v(0))
echo trans_sim4_FIG

hardcopy trans_sim5.ps v(out1)-v(0)-12
echo trans_sim5_FIG


.endc

